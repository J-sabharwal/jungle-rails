<section class="dashboard-index">

  <header class="page-header">
    <h1>My Dashboard</h1>
    <h5>The store currently holds <%= show.product.count %> products and has <%= @category.count %> categories created</h5>
  </header>

  <div class="panel panel-default products">

    <table class="table table-bordered">
      <thead>
        <tr class="bg-info" align="center">
          <th>Product Count</th>
          <th>Category Count</th>
        </tr>
        <tr>
          <td>
            <h4><%= show.product.count %></h4>
            <br>
          </td>
          <td>
            <h4><%= @category.count %></h4>
          </td>
        </tr>
      </thead>
    </table>
          
  </div>
  <%= link_to 'Admin Page',  [:admin, :products], class: 'btn btn-sm btn-info btn-lg btn-block' %>

</section>