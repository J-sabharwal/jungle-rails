<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>
    <h4> An email confirmation has been sent to: <%= show.email %> </h4>
  </div>
  <div class="panel panel-default items">
      <table class="table table-bordered">
        <thead>
          <tr class="bg-info">
            <th colspan="2" style="text-align:center">Product</th>
            <th style="text-align:center">Unit Price</th>
            <th style="text-align:center">Quantity</th>
            <th style="text-align:center">Price</th>
          </tr>
        </thead>
        <tbody>
          <% show.line_items.each do |item| %>
            <%= render 'line_items', lineItem: item %>
          <% end %>
        </tbody>
        <tfoot>
          <tr>
            <th colspan="4">
              TOTAL:
            </th>
            <th>
              <%= number_to_currency(show.total_cents / 100.0, precision: 2) %>
            </th>
          </tr>
        </tfoot>
      </table>
    </div>

  <br>



  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
